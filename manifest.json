{
  "manifest_version": 2,

  "name": "Data Sourcing",
  "description": "This extension allows you to easily take & source notes.",
  "version": "1.0",

  "permissions": [
    "tabs", 
    "<all_urls>",
    "storage"
  ],

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["geturl.js"]
    }
  ],

  "background": {
    "scripts": ["background.js"]  
  }
}